mixin productItem(item)
  .col-md-4.col-sm-6.col-xs-12
    .card.mb-3(style='max-width: 540px;')
      .row.no-gutters
        .col-md-4
          img.card-img(src=item.image, alt=item.name width=150 height=150)
        .col-md-8
          .card-body
            h5.card-title= item.name
            p.card-text= item.desc
            p.card-text
              small.text-muted Updated 3 mins ago

mixin paginations(list)
  nav(aria-label='Page navigation example')
    ul.pagination.justify-content-center
      li.page-item.disabled
        a.page-link(href='#', tabindex='-1', aria-disabled='true') Previous
      li.page-item
        a.page-link(href='#') 1
      li.page-item
        a.page-link(href='#') 2
      li.page-item
        a.page-link(href='#') 3
      li.page-item
        a.page-link(href='#') Next
